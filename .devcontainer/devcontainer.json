{
  "name": "ClusterFuzz",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.isort",
        "eamodio.gitlens",
        "googlecloudtools.cloudcode"
      ]
    }
  },
  "remoteUser": "clusterfuzz",
  "postCreateCommand": "bash local/install_deps.bash",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ]
}
